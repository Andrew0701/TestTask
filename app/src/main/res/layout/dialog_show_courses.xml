<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/lvDialogShowCoursesCourseItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent"
        android:dividerHeight="6.0sp"
        android:layout_marginStart="@dimen/dialog_horizontal_margin"
        android:layout_marginEnd="@dimen/dialog_horizontal_margin"
        android:layout_marginTop="@dimen/dialog_vertical_margin"
        android:layout_marginBottom="@dimen/dialog_vertical_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/dialog_show_courses_average_mark_horizontal_margin"
        android:layout_marginEnd="@dimen/dialog_horizontal_margin"
        android:layout_marginBottom="@dimen/dialog_vertical_margin"
        android:layout_marginTop="@dimen/dialog_vertical_margin">

        <TextView
            android:id="@+id/tvDialogShowCoursesAverageMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_average_mark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvDialogShowCoursesAverageMarkValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />

    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/dialog_horizontal_margin"
        android:layout_marginEnd="@dimen/dialog_horizontal_margin"
        android:layout_marginBottom="@dimen/dialog_vertical_margin"
        android:background="@color/colorGray"/>

    <Button
        android:id="@+id/btnShowCoursesOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_ok"
        android:layout_gravity="right"
        android:layout_marginEnd="@dimen/dialog_horizontal_margin"
        android:layout_marginBottom="@dimen/dialog_vertical_margin"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"/>

</LinearLayout>